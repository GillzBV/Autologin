<?xml version="1.0" encoding="utf-8" ?>
<widget id="AutoLogin.widget.AutoLoginOffline" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>AutoLoginOffline</name>
    <description>The description of this widget.</description>

    <icon></icon>

    <properties>      
        <property key="loginEntity" type="entity" required="true" allowNonPersistableEntities="true">
            <caption>Login entity</caption>
            <category>Data source</category>
            <description>The entity of the locations</description>
        </property>

        <property key="usernameAttribute" type="attribute" entityProperty="loginEntity" required="true">
            <caption>Username</caption>
            <category>Data source</category>
            <description>Attribute where the username string is stored.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>

        <property key="passwordAttribute" type="attribute" entityProperty="loginEntity" required="true">
            <caption>Password</caption>
            <category>Data source</category>
            <description>Attribute where the password string is stored.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>

        <property key="buttonLabel" type="string" defaultValue="Sign In" required="false">
            <caption>Button label</caption>
            <category>Form</category>
            <description>The label on the sign in button.</description>
        </property>

        <property key="usernameTextbox" type="string" required="true">
            <caption>Username class</caption>
            <category>Form</category>
            <description>Class given to the username textbox.</description>
        </property>

        <property key="passwordTextbox" type="string" required="true">
            <caption>Password class</caption>
            <category>Form</category>
            <description>Class given to the password textbox.</description>
        </property>  
    </properties>
</widget>
